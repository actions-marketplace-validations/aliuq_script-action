{
  "name": "script-action",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@9.12.3",
  "description": "GitHub Action for sending Telegram messages",
  "author": "AliuQ",
  "license": "MIT",
  "keywords": [
    "github",
    "action",
    "typescript",
    "bun",
    "tsx"
  ],
  "main": "dist/index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "act -W .github/workflows/ci.yaml -p=false workflow_dispatch",
    "build": "sh scripts/build.sh",
    "lint": "eslint .",
    "release": "pnpm build && npx bumpp --push --tag --commit --all && npx changelogithub"
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@antfu/eslint-config": "^3.12.1",
    "@types/bun": "latest",
    "@types/node": "^20.17.10",
    "eslint": "^9.17.0",
    "handlebars": "^4.7.8",
    "kolorist": "^1.8.0",
    "lefthook": "^1.10.1",
    "typescript": "^5.7.2",
    "unbuild": "^3.0.1"
  }
}
